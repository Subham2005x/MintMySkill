{
  "name": "mintmyskill-backend",
  "version": "1.0.0",
  "description": "Backend API for MintMySkill EdTech Platform with Blockchain Token Rewards",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "seed": "node scripts/seedDatabase.js",
    "compile": "hardhat compile",
    "deploy:fuji": "hardhat run scripts/deploy.js --network fuji",
    "deploy:avalanche": "hardhat run scripts/deploy.js --network avalanche",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "verify": "hardhat verify"
  },
  "keywords": [
    "education",
    "blockchain",
    "tokens",
    "api",
    "nodejs",
    "express"
  ],
  "author": "MintMySkill Team",
  "license": "MIT",
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.0",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.41.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.0",
    "ethers": "^6.8.0",
    "express": "^4.19.2",
    "express-rate-limit": "^7.1.0",
    "express-validator": "^7.0.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^8.0.0",
    "multer": "^1.4.4",
    "multer-storage-cloudinary": "^4.0.0",
    "nodemailer": "^6.9.0",
    "stripe": "^14.0.0",
    "web3": "^4.2.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "hardhat": "^2.17.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.0",
    "supertest": "^6.3.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
